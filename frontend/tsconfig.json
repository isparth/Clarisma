{
  "compilerOptions": {
    "types": [
      "node",
      "@types/babel__generator",
      "@types/babel__template",
      "@types/babel__traverse",
      "@types/estree"
    ],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
